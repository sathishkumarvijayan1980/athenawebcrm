<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Athena Badminton Academy</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)

    @*<script src="~/Scripts/jquery-2.2.4.js"></script>*@

</head>
<body class="fixed-left">

    <!-- Begin page -->
    <div id="wrapper">
        <div class="topbar">
            <!-- LOGO -->
            <div class="topbar-left">
                <div class="text-center">
                    <img src="/Images/logo.PNG" />
                </div>
            </div>
        </div>

        <!--Top bar end-->
        <!--Left bar start-->
        <div class="left side-menu">
            <div class="sidebar-inner">
                @{
                if (@Session["UserId"] != null && @Session["UserType"] != null)
                {
                    <div id="sidebar-menu">
                        <ul>
                            <li class="text-muted menu-title">Main</li>

                            <li>
                                <a href="/Members/MemberSearch" class="waves-effect waves-primary"><i class="md md-perm-contact-cal"></i><span> Search Member</span></a>
                            </li>

                            <li>
                                <a href="/Members/MemberSlotAvailability" class="waves-effect waves-primary"><i class="md md-access-time"></i><span> Slot Availability </span></a>
                            </li>

                            <li>
                                <a href="/Members/MemberRegister" class="waves-effect waves-primary"><i class="md md-account-child"></i><span> Register Member</span></a>
                            </li>

                            <li>
                                <a href="/Members/MemberLastPaymentReport" class="waves-effect waves-primary"><i class="md md-access-alarm"></i><span> Member Last Payment</span></a>
                            </li>

                            <li>
                                <a href="/Guest/GuestSearch" class="waves-effect waves-primary"><i class="md md-face-unlock"></i><span> Guest Entry</span></a>
                            </li>

                            <li>
                                <a href="/Payments/MemberDayWiseCollectionReport" class="waves-effect waves-primary"><i class="md md-blur-circular"></i><span> Member Collection </span></a>
                            </li>

                            <li>
                                <a href="/Payments/GuestCollectionReport" class="waves-effect waves-primary"><i class="md md-account-balance-wallet"></i><span> Guest Collection </span></a>
                            </li>



                            @if ("SUPERADMIN".Equals(@Session["UserType"]))
                            {
                                <li class="has_sub">
                                    <a href="javascript:void(0);" class="waves-effect waves-primary active"><i class="md md-print"></i><span> Reports </span> <span class="menu-arrow"></span></a>
                                    <ul class="list-unstyled">
                                        <li><a href="/Members/MembersListReport">Members</a></li>
                                        <li><a href="/Payments/ReceiptsListReport">Receipts</a></li>
                                        <li><a href="/Payments/MemberPaymentReport">Member Payments</a></li>
                                        <li><a href="/Payments/GuestPaymentReport">Guest Payments</a></li>
                                    </ul>
                                </li>
                            }

                        </ul>
                        <div class="clearfix"></div>
                    </div>
            }
                }

                <div class="clearfix"></div>
            </div>

            <div class="user-detail">
                <div class="dropup">
                    <a href="" class="dropdown-toggle profile" data-toggle="dropdown" aria-expanded="true">
                        <span class="user-info-span">
                            <h5 class="m-t-0 m-b-0">@Session["UserName"]</h5>
                        </span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Home/UserLogout"><i class="md md-settings-power"></i> Logout</a></li>
                    </ul>

                </div>
            </div>
        </div>
        <!--Left bar end-->
        <!--Body Right Bar start-->
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>
        <!--Body Right bar end-->

        <script src="~/Content/switchery.min.js"></script>

        @Scripts.Render("~/bundles/bootstrap")

    </div>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)

    

</body>
</html>
