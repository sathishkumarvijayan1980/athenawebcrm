@using System.Globalization
@using CRMManager.Models
@model IEnumerable<CRMManager.Models.MemberPayment>

@{
    ViewBag.Title = "Member Last Payment Report";
}
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-color panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">@ViewBag.Title</h3>
            </div>
           
            <div class="panel-body">
                <div class="alert alert-success">
                    List of Registered Members with their Last Payment Date
                </div>

                <!--Search Result Page Start-->


                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <h4 class="m-t-0 header-title"><b>Search Result</b></h4>
                            <p class="text-muted font-13 m-b-30">
                                
                            </p>
                            <table class="table table-striped table-bordered">
                                <tr>
                                    <th>
                                        S.No
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MemberCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MemberName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MemberMobile)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MemberType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TimeSlot)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PaymentDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PaymentAmount)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </th>
                                </tr>

                                @if (ViewData["SearchResult"] is List<MemberPayment> searchResultData)
                                {
                                    var i = 1;
                                    foreach (var item in searchResultData)
                                    {

                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @{
                                            var memberCode = item.MemberCode;
                                        }
                                        @Html.ActionLink(memberCode, "MemberUpdateSearch", "Members", new { profileID = memberCode }, null)
                                    </td>

                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.MemberCode)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MemberName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MemberMobile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MemberType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TimeSlot)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PaymentDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PaymentAmount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsActive)
                                    </td>
                                </tr>
                                        i++;
                                    }
                                }

                            </table>

                        </div>
                    </div>
                </div>
                <!--Search Result Page End-->
            </div>
        </div>
    </div>
</div>